@using AutoNexus.Domain.Entities
@model AutoNexus.Application.Common.PaginatedList<Sale>

@{
    ViewData["Title"] = "Histórico de Vendas";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    string? currentFilter = ViewData["CurrentFilter"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0"><i class="bi bi-receipt"></i> Histórico de Vendas</h2>
        <small class="text-muted">Gerencie recibos e consulte transações</small>
    </div>

    <div class="d-flex gap-2">
        <a asp-page="/Index" asp-page-handler="ExportSalesCsv" class="btn btn-export-excel px-3">
            <i class="bi bi-file-earmark-excel me-1"></i> Exportar Dados
        </a>

        <a asp-action="Create" class="btn btn-success px-3 shadow-sm">
            <i class="bi bi-cart-plus me-1"></i> Nova Venda
        </a>
    </div>
</div>

<div class="card p-3 mb-4 shadow-sm border-0 bg-light">
    <form asp-action="Index" method="get" class="row g-2">
        <div class="col-md-10">
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                <input type="text" name="searchString" value="@currentFilter" class="form-control border-start-0 ps-0"
                       placeholder="Buscar por protocolo, cliente ou modelo..." />
            </div>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-secondary w-100">Buscar</button>
        </div>
    </form>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Protocolo</th>
                        <th>Veículo</th>
                        <th>Cliente</th>
                        <th>Data</th>
                        <th>Valor</th>
                        <th class="text-end pe-4">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox display-6"></i>
                                <p class="mt-2">Nenhuma venda encontrada.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="badge bg-secondary font-monospace">@item.ProtocolNumber</span>
                                </td>
                                <td>
                                    <strong>@item.Vehicle?.Model</strong><br />
                                    <small class="text-muted">@item.Vehicle?.Manufacturer?.Name</small>
                                </td>
                                <td>
                                    @item.Client?.Name<br />
                                    <small class="text-muted">@item.Client?.CPF</small>
                                </td>
                                <td>@item.SaleDate.ToString("dd/MM/yyyy")</td>
                                <td class="fw-bold text-success">@item.SalePrice.ToString("C")</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-sm btn-outline-primary" title="Ver Recibo" disabled>
                                            <i class="bi bi-eye"></i>
                                        </button>

                                        <button class="btn btn-sm btn-outline-danger" title="Cancelar/Estornar" disabled>
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Navegação de página" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-searchString="@currentFilter"
                   class="page-link shadow-none">
                    &laquo; Anterior
                </a>
            </li>
            <li class="page-item disabled">
                <span class="page-link border-0 bg-transparent text-muted">
                    Página @Model.PageIndex de @Model.TotalPages
                </span>
            </li>
            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-searchString="@currentFilter"
                   class="page-link shadow-none">
                    Próximo &raquo;
                </a>
            </li>
        </ul>
    </nav>
}