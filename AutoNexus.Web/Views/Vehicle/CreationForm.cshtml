@model AutoNexus.Web.Models.VehicleFormViewModel

@{
    ViewData["Title"] = "Novo Veículo";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />

<div class="container mt-4 pb-5 mb-5">
    <h2>Cadastrar Novo Veículo</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="ManufacturerId" class="form-label">Fabricante</label>
                    <select asp-for="ManufacturerId"
                            class="form-select select2"
                            asp-items="@(new SelectList(Model.Manufacturers, "Id", "Name"))">
                        <option value="">-- Selecione uma Marca --</option>
                    </select>
                    <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Model" class="form-label">Modelo</label>
                    <select asp-for="Model" class="form-select select2" disabled>
                        <option value="">-- Selecione uma Marca primeiro --</option>
                    </select>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Year" class="form-label">Ano</label>
                    <input asp-for="Year" class="form-control" type="number" min="1900" max="2100" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Preço (R$)</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Type" class="form-label">Tipo de Veículo</label>
                    <select asp-for="Type" class="form-select"
                            asp-items="Html.GetEnumSelectList<AutoNexus.Domain.Enums.VehicleType>()">
                        <option value="">-- Selecione o Tipo --</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Descrição (Opcional)</label>
                    <textarea asp-for="Description" class="form-control" rows="3" maxlength="500"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <div class="form-text">Máximo de 500 caracteres.</div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Salvar Veículo
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            // Inicializa o Select2 com tema Bootstrap em todos os campos com a classe .select2
            $('.select2').select2({
                theme: 'bootstrap-5',
                width: '100%'
            });

            // Referências aos campos via jQuery
            const $manufacturer = $('#ManufacturerId');
            const $model = $('#Model');

            // 3. Evento de Mudança (Change)
            $manufacturer.on('change', function () {
                const manufacturerId = $(this).val();

                // Limpa o dropdown de modelos e avisa o Select2
                $model.empty().trigger('change');

                if (!manufacturerId) {
                    $model.prop('disabled', true);
                    return;
                }

                // Adiciona item "Carregando..."
                const loadingOption = new Option("Carregando modelos...", "", true, true);
                $model.append(loadingOption).trigger('change');
                $model.prop('disabled', true);

                // 4. Chamada AJAX
                $.ajax({
                    url: '/Vehicle/GetModelsByManufacturer',
                    data: { manufacturerId: manufacturerId },
                    success: function (data) {
                        // Limpa o "Carregando..."
                        $model.empty();

                        // Adiciona opção padrão
                        $model.append(new Option("-- Selecione um Modelo --", "", true, true));

                        if (data.length === 0) {
                            $model.append(new Option("Nenhum modelo encontrado", "", false, false));
                        } else {
                            // Loop para preencher a lista
                            $.each(data, function (index, item) {
                                // Tenta pegar o nome independente de maiúscula/minúscula
                                const nome = item.nome || item.name || item.Name || "Sem Nome";

                                // Cria a opção e adiciona
                                const newOption = new Option(nome, nome, false, false);
                                $model.append(newOption);
                            });
                        }

                        // ATUALIZA O SELECT2 (Crucial!)
                        $model.trigger('change');
                        $model.prop('disabled', false);
                    },
                    error: function (err) {
                        console.error("Erro Ajax:", err);
                        $model.empty();
                        $model.append(new Option("Erro ao carregar", "", true, true));
                        $model.trigger('change');
                    }
                });
            });
        });
    </script>
}