@model AutoNexus.Web.Models.VehicleFormViewModel

@{
    ViewData["Title"] = "Editar Veículo";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />

<div class="container mt-4 pb-5 mb-5">
    <h2>Editar Veículo</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" id="originalModel" value="@Model.Model" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="ManufacturerId" class="form-label">Fabricante</label>
                    <select asp-for="ManufacturerId"
                            class="form-select select2"
                            asp-items="@(new SelectList(Model.Manufacturers, "Id", "Name"))">
                        <option value="">-- Selecione --</option>
                    </select>
                    <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Model" class="form-label">Modelo</label>
                    <select asp-for="Model" class="form-select select2">
                    </select>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Year" class="form-label">Ano</label>
                    <input asp-for="Year" class="form-control" type="number" placeholder="@DateTime.Now.Year" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Preço (R$)</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0,00" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Type" class="form-label">Tipo de Veículo</label>
                    <select asp-for="Type" class="form-select"
                            asp-items="Html.GetEnumSelectList<AutoNexus.Domain.Enums.VehicleType>()">
                        <option value="">-- Selecione o Tipo --</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Descrição (Opcional)</label>
                    <textarea asp-for="Description" class="form-control" rows="3" maxlength="500" placeholder="Insira detalhes adicionais sobre o veículo..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <div class="form-text">Máximo de 500 caracteres.</div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Salvar Alterações
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            // Inicializa Select2
            $('.select2').select2({ theme: 'bootstrap-5', width: '100%' });

            // Referências jQuery
            const $manufacturer = $('#ManufacturerId');
            const $model = $('#Model');
            const $txtYear = $('#Year');
            const $txtPrice = $('#Price');
            const $ddlType = $('#Type');
            const $txtDesc = $('#Description');

            const originalModelValue = $('#originalModel').val();

            // FUNÇÃO AUXILIAR: LIMPAR DADOS 
            function clearVehicleData() {
                $txtYear.val('');
                $txtPrice.val('');
                $ddlType.val('');
                $txtDesc.val('');
            }

            // Função para carregar modelos
            function loadModels(manufacturerId, modelToSelect = null) {
                $model.empty().trigger('change');

                if (!manufacturerId) return;

                const loadingOption = new Option("Carregando...", "", true, true);
                $model.append(loadingOption).trigger('change');
                $model.prop('disabled', true);

                $.ajax({
                    url: '/Vehicle/GetModelsByManufacturer',
                    data: { manufacturerId: manufacturerId },
                    success: function (data) {
                        $model.empty();
                        $model.append(new Option("-- Selecione --", "", true, true));

                        $.each(data, function (index, item) {
                            const nome = item.nome || item.name || item.Name || "Sem Nome";
                            const isSelected = modelToSelect && nome === modelToSelect;

                            const newOption = new Option(nome, nome, isSelected, isSelected);
                            $model.append(newOption);
                        });

                        $model.trigger('change');
                        $model.prop('disabled', false);
                    },
                    error: function() {
                        $model.empty().append(new Option("Erro ao carregar", "")).trigger('change');
                    }
                });
            }

            // CENÁRIO 1: Load Inicial
            const initialManufacturer = $manufacturer.val();
            if (initialManufacturer) {
                loadModels(initialManufacturer, originalModelValue);
            }

            // CENÁRIO 2: Troca de Fabricante 
            $manufacturer.on('change', function () {
                clearVehicleData();
                loadModels($(this).val(), null);
            });

            // CENÁRIO 3: Troca de Modelo
            $model.on('change', function() {
                const currentModel = $(this).val();
                if (currentModel && currentModel !== originalModelValue && currentModel !== "Carregando...") {
                    clearVehicleData();
                }
            });
        });
    </script>
}