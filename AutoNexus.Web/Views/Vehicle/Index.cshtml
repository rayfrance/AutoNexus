@model AutoNexus.Application.Common.PaginatedList<AutoNexus.Domain.Entities.Vehicle>
@using AutoNexus.Domain.Enums
@using AutoNexus.Domain

@{
    ViewData["Title"] = "Estoque";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    string? currentFilter = ViewData["CurrentFilter"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0"><i class="bi bi-car-front-fill"></i> Veículos</h2>
        <small class="text-muted">Gerencie o estoque da revenda</small>
    </div>

    @* Apenas Admin pode ver o botão de criação *@
    @if (User.IsInRole(Constants.ADMIN_ROLE))
    {
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg"></i> Novo Veículo
        </a>
    }
</div>

<div class="card p-3 mb-4 shadow-sm border-0 bg-light">
    <form asp-action="Index" method="get" class="row g-2">
        <div class="col-md-10">
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                <input type="text" name="searchString" value="@currentFilter" class="form-control border-start-0 ps-0"
                       placeholder="Buscar por modelo ou fabricante..." />
            </div>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-secondary w-100">Buscar</button>
        </div>
    </form>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Modelo</th>
                        <th>Fabricante</th>
                        <th>Ano</th>
                        <th>Preço</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="bi bi-car-front display-6"></i>
                                <p class="mt-2">Nenhum veículo encontrado no estoque.</p>
                                @if (User.IsInRole(Constants.ADMIN_ROLE))
                                {
                                    <a asp-action="Create" class="btn btn-sm btn-outline-primary">Cadastrar Agora</a>
                                }
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            string badgeClass = item.Status switch
                            {
                                VehicleStatus.Available => "bg-success",
                                VehicleStatus.Reserved => "bg-warning text-dark",
                                VehicleStatus.Sold => "bg-secondary",
                                _ => "bg-light text-dark"
                            };

                            <tr>
                                <td class="ps-4 fw-bold">@item.Model</td>
                                <td>@item.Manufacturer.Name</td>
                                <td>@item.Year</td>
                                <td class="fw-bold text-primary">@item.Price.ToString("C")</td>
                                <td>
                                    <span class="badge @badgeClass">@item.Status</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        @* Ações restritas para Admin *@
                                        @if (User.IsInRole(Constants.ADMIN_ROLE))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Deletar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-muted border">
                                                <i class="bi bi-lock"></i> Somente Leitura
                                            </span>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Navegação de página" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-searchString="@currentFilter"
                   class="page-link shadow-none">
                    &laquo; Anterior
                </a>
            </li>
            <li class="page-item disabled">
                <span class="page-link border-0 bg-transparent text-muted">
                    Página @Model.PageIndex de @Model.TotalPages
                </span>
            </li>
            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-searchString="@currentFilter"
                   class="page-link shadow-none">
                    Próximo &raquo;
                </a>
            </li>
        </ul>
    </nav>
}