@model AutoNexus.Application.Common.PaginatedList<AutoNexus.Domain.Entities.Vehicle>

@{
    ViewData["Title"] = "Veículos";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    string? currentFilter = ViewData["CurrentFilter"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Veículos</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Novo Veículo
    </a>
</div>

<div class="card p-3 mb-4">
    <form asp-action="Index" method="get" class="row g-2">
        <div class="col-md-10">
            <input type="text" name="searchString" value="@currentFilter" class="form-control" placeholder="Buscar por modelo ou fabricante..." />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-secondary w-100">Buscar</button>
        </div>
    </form>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Modelo</th>
                <th>Fabricante</th>
                <th>Ano</th>
                <th>Preço</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.Model</td>
                    <td>@item.Manufacturer.Name</td>
                    <td>@item.Year</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <span class="badge bg-success">@item.Status</span>
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Deletar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Navegação de página">
    <ul class="pagination justify-content-center">
        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-searchString="@currentFilter"
               class="page-link">
                &laquo; Anterior
            </a>
        </li>
        <li class="page-item disabled">
            <span class="page-link">Página @Model.PageIndex de @Model.TotalPages</span>
        </li>
        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-searchString="@currentFilter"
               class="page-link">
                Próximo &raquo;
            </a>
        </li>
    </ul>
</nav>