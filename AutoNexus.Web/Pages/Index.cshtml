@page "/"
@model AutoNexus.Web.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Dashboard";
}
<div class="container-fluid mt-4 px-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold"><i class="bi bi-grid-1x2-fill me-2"></i>Dashboard Administrativo</h2>
            <p class="text-muted">Bem-vindo ao painel de controle da AutoNexus.</p>
        </div>
    </div>

<div class="row g-4 mb-5">
    <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm bg-primary text-white p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-uppercase mb-1 opacity-75 small">Total em Vendas</h6>
                    <h3 class="fw-bold mb-0">@Model.RevenueThisMonth.ToString("C")</h3>
                </div>
                <i class="bi bi-currency-dollar fs-1 opacity-50"></i>
            </div>
            <div class="mt-3 small opacity-75">Baseado em @Model.SalesThisMonthCount vendas este mês</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm bg-success text-white p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-uppercase mb-1 opacity-75 small">Veículos no Pátio</h6>
                    <h3 class="fw-bold mb-0">@Model.TotalVehiclesAvailable</h3>
                </div>
                <i class="bi bi-car-front-fill fs-1 opacity-50"></i>
            </div>
            <div class="mt-3 small opacity-75">Status: Disponível</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm bg-warning text-dark p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-uppercase mb-1 opacity-75 small">Valor em Estoque</h6>
                    <h3 class="fw-bold mb-0">@Model.TotalStockValue.ToString("C")</h3>
                </div>
                <i class="bi bi-graph-up-arrow fs-1 opacity-50"></i>
            </div>
            <div class="mt-3 small opacity-75">Total de ativos no pátio</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card h-100 border-0 shadow-sm bg-info text-white p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-uppercase mb-1 opacity-75 small">Clientes Ativos</h6>
                    <h3 class="fw-bold mb-0">@Model.ActiveCustomersCount</h3>
                </div>
                <i class="bi bi-people-fill fs-1 opacity-50"></i>
            </div>
            <div class="mt-3 small opacity-75">Base de CPFs únicos</div>
        </div>
    </div>
</div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="row g-4">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0 fw-bold text-secondary">Distribuição por Marca</h5>
                        </div>
                        <div class="card-body d-flex justify-content-center">
                            <div style="width: 100%; max-width: 400px;">
                                <canvas id="brandChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="mb-0 fw-bold text-secondary">Vendas Recentes</h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-light text-center py-4">
                                <i class="bi bi-clipboard-data fs-1 text-muted"></i>
                                <p class="mt-2 text-muted">Nenhuma transação registrada hoje.</p>
                                <a asp-area="" asp-controller="Sale" asp-action="Create" class="btn btn-sm btn-outline-primary">Lançar Nova Venda</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold text-secondary">Ações Rápidas</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a asp-area="" asp-controller="Sale" asp-action="Create"
                           class="quick-action-btn bg-white p-3 rounded-3 d-flex align-items-center text-dark shadow-sm">
                            <div class="bg-success bg-opacity-10 p-2 rounded-circle me-3">
                                <i class="bi bi-cart-plus fs-4 text-success"></i>
                            </div>
                            <div>
                                <strong class="d-block">Registrar Venda</strong>
                                <small class="text-muted">Lançar nova saída</small>
                            </div>
                        </a>

                        <a asp-area="" asp-controller="Vehicle" asp-action="Create"
                           class="quick-action-btn bg-white p-3 rounded-3 d-flex align-items-center text-dark shadow-sm">
                            <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                                <i class="bi bi-plus-circle fs-4 text-primary"></i>
                            </div>
                            <div>
                                <strong class="d-block">Adicionar Veículo</strong>
                                <small class="text-muted">Entrada no estoque</small>
                            </div>
                        </a>

                        <a asp-area="" asp-controller="Vehicle" asp-action="Index"
                           class="quick-action-btn bg-white p-3 rounded-3 d-flex align-items-center text-dark shadow-sm">
                            <div class="bg-secondary bg-opacity-10 p-2 rounded-circle me-3">
                                <i class="bi bi-search fs-4 text-secondary"></i>
                            </div>
                            <div>
                                <strong class="d-block">Consultar Estoque</strong>
                                <small class="text-muted">Ver pátio completo</small>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // Serialização segura dos dados do Model para o JavaScript
        const labels = @Html.Raw(Json.Serialize(Model.ManufacturerLabels));
        const data = @Html.Raw(Json.Serialize(Model.VehicleCounts));

        const ctx = document.getElementById('brandChart').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Veículos em Estoque',
                    data: data,
                    backgroundColor: [
                        '#0d6efd', '#198754', '#ffc107', '#0dcaf0', '#6610f2', '#fd7e14'
                    ],
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                    },
                    title: {
                        display: true,
                        text: 'Estoque por Fabricante'
                    }
                }
            }
        });
    </script>
}